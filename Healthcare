    <script>
        function wrapText(str, maxWidth) {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            let lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + words[i].length + 1 < maxWidth) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const investmentCtx = document.getElementById('investmentChart').getContext('2d');
        new Chart(investmentCtx, {
            type: 'doughnut',
            data: {
                labels: ['Cybersecurity', 'Cloud Adoption', 'Telehealth & RPM', 'Data Analytics & AI', 'Operational Automation'],
                datasets: [{
                    label: 'IT Investment Priority',
                    data: [30, 25, 20, 15, 10],
                    backgroundColor: [
                        '#2563EB',
                        '#3B82F6',
                        '#60A5FA',
                        '#93C5FD',
                        '#BFDBFE'
                    ],
                    borderColor: '#FFFFFF',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    }
                }
            }
        });

        const tcoCtx = document.getElementById('tcoChart').getContext('2d');
        new Chart(tcoCtx, {
            type: 'bar',
            data: {
                labels: ['Hardware Acquisition', 'Software Licensing', 'IT Admin Overhead', 'Power & Cooling', 'Downtime Costs'],
                datasets: [{
                    label: 'Traditional Infrastructure TCO',
                    data: [100, 120, 150, 80, 90],
                    backgroundColor: '#9CA3AF',
                    borderColor: '#6B7280',
                    borderWidth: 1
                }, {
                    label: 'Scale Computing TCO',
                    data: [80, 40, 30, 50, 15],
                    backgroundColor: '#3B82F6',
                    borderColor: '#2563EB',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Relative Cost Index'
                        }
                    },
                    x: {
                        ticks: {
                            callback: function(value) {
                                return wrapText(this.getLabelForValue(value), 16);
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    },
                    legend: {
                        position: 'top',
                    }
                }
            }
        });
    </script>

